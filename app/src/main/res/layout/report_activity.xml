<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.expensemanager.app.report.ReportActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/report_activity_tab_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:backgroundTint="@color/colorPrimary"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/white"
        style="@style/CustomTabLayoutStyle"
        android:elevation="6dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/report_activity_view_pager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/report_activity_tab_layout_id"/>

</RelativeLayout>
