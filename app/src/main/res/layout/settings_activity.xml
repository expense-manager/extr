<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_id">

    <RelativeLayout
        android:id="@+id/setting_activity_weekly_notification_relative_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/setting_activity_profile_photo_image_view_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/space_large"/>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_activity_profile_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_activity_profile_photo_image_view_id"
            android:layout_marginLeft="@dimen/space_medium_small"
            android:layout_marginRight="@dimen/space_medium_small"
            android:layout_marginTop="@dimen/space_really_small"
            android:layout_marginBottom="@dimen/space_really_small"

            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Profile label -->
                <TextView
                    android:id="@+id/setting_activity_profile_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:paddingTop="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/profile"
                    android:textSize="@dimen/text_really_small"/>

                <!-- Edit profile -->
                <TextView
                    android:id="@+id/setting_activity_edit_profile_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/setting_activity_profile_label_text_view_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/edit_profile"
                    android:textSize="@dimen/text_small"/>

                <View
                    android:id="@+id/settings_activity_profile_divider_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/setting_activity_edit_profile_text_view_id"

                    android:background="@color/gray_light_alpha_88" />

                <!-- Change password -->
                <TextView
                    android:id="@+id/setting_activity_change_password_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/settings_activity_profile_divider_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/change_password"
                    android:textSize="@dimen/text_small"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_activity_category_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_activity_profile_card_view_id"
            android:layout_marginLeft="@dimen/space_medium_small"
            android:layout_marginRight="@dimen/space_medium_small"
            android:layout_marginTop="@dimen/space_really_small"
            android:layout_marginBottom="@dimen/space_really_small"

            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Category label -->
                <TextView
                    android:id="@+id/setting_activity_category_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:paddingTop="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/category"
                    android:textSize="@dimen/text_really_small"/>

                <!-- Category description -->
                <TextView
                    android:id="@+id/setting_activity_category_description_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/setting_activity_category_label_text_view_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/category_description"
                    android:textSize="@dimen/text_small"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- Budget -->
        <android.support.v7.widget.CardView
            android:id="@+id/setting_activity_budget_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_activity_category_card_view_id"
            android:layout_marginLeft="@dimen/space_medium_small"
            android:layout_marginRight="@dimen/space_medium_small"
            android:layout_marginTop="@dimen/space_really_small"
            android:layout_marginBottom="@dimen/space_really_small"

            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Budget label -->
                <TextView
                    android:id="@+id/setting_activity_budget_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:paddingTop="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/budget"
                    android:textSize="@dimen/text_really_small"/>

                <RelativeLayout
                    android:id="@+id/setting_activity_weekly_budget_relative_layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setting_activity_budget_label_text_view_id">

                    <!-- Weekly budget label -->
                    <TextView
                        android:id="@+id/setting_activity_weekly_budget_label_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/setting_activity_weekly_budget_text_view_id"
                        android:layout_centerVertical="true"

                        android:paddingStart="@dimen/space_medium_large"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="@string/weekly"
                        android:textSize="@dimen/text_small"/>

                    <!-- Weekly budget  -->
                    <TextView
                        android:id="@+id/setting_activity_weekly_budget_text_view_id"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"

                        android:padding="@dimen/space_medium_large"
                        android:text="$800"/>

                </RelativeLayout>
                
                <View
                    android:id="@+id/settings_activity_budget_divider_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/setting_activity_weekly_budget_relative_layout_id"

                    android:background="@color/gray_light_alpha_88" />

                <RelativeLayout
                    android:id="@+id/setting_activity_monthly_budget_relative_layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_activity_budget_divider_id">

                    <!-- Monthly budget label -->
                    <TextView
                        android:id="@+id/setting_activity_monthly_budget_label_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/setting_activity_monthly_budget_text_view_id"
                        android:layout_centerVertical="true"

                        android:paddingStart="@dimen/space_medium_large"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="@string/monthly"
                        android:textSize="@dimen/text_small"/>

                    <!-- Monthly budget -->
                    <TextView
                        android:id="@+id/setting_activity_monthly_budget_text_view_id"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"

                        android:padding="@dimen/space_medium_large"
                        android:text="$2600"/>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_activity_notification_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_activity_budget_card_view_id"
            android:layout_marginLeft="@dimen/space_medium_small"
            android:layout_marginRight="@dimen/space_medium_small"
            android:layout_marginTop="@dimen/space_really_small"
            android:layout_marginBottom="@dimen/space_really_small"

            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Notification label -->
                <TextView
                    android:id="@+id/setting_activity_notification_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:paddingTop="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/notification"
                    android:textSize="@dimen/text_really_small"/>

                <!-- Start date switch -->
                <Switch
                    android:id="@+id/setting_activity_weekly_notification_switch_id"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/setting_activity_notification_label_text_view_id"

                    android:padding="@dimen/space_medium_large"
                    android:background="@drawable/background_bottom_line_gray_light"/>

                <!-- Weekly notification label -->
                <TextView
                    android:id="@+id/setting_activity_weekly_notification_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/setting_activity_weekly_notification_switch_id"
                    android:layout_alignTop="@+id/setting_activity_weekly_notification_switch_id"
                    android:layout_alignBottom="@+id/setting_activity_weekly_notification_switch_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/weekly_notification"
                    android:textSize="@dimen/text_small"
                    android:background="@drawable/background_bottom_line_gray_light"/>

                <!-- Start date switch -->
                <Switch
                    android:id="@+id/setting_activity_monthly_notification_switch_id"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/setting_activity_weekly_notification_switch_id"

                    android:padding="@dimen/space_medium_large"/>

                <!-- Monthly notification label -->
                <TextView
                    android:id="@+id/setting_activity_monthly_notification_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/setting_activity_monthly_notification_switch_id"
                    android:layout_alignTop="@+id/setting_activity_monthly_notification_switch_id"
                    android:layout_alignBottom="@+id/setting_activity_monthly_notification_switch_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/monthly_notification"
                    android:textSize="@dimen/text_small"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_activity_general_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_activity_notification_card_view_id"
            android:layout_marginLeft="@dimen/space_medium_small"
            android:layout_marginRight="@dimen/space_medium_small"
            android:layout_marginTop="@dimen/space_really_small"
            android:layout_marginBottom="@dimen/space_really_small"

            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- General label -->
                <TextView
                    android:id="@+id/setting_activity_general_label_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="@dimen/space_medium_large"
                    android:paddingLeft="@dimen/space_medium_large"
                    android:paddingRight="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/general"
                    android:textSize="@dimen/text_really_small"/>

                <!-- Send feedback -->
                <TextView
                    android:id="@+id/setting_activity_weekly_send_feedback_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/setting_activity_general_label_text_view_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/send_feedback"
                    android:textSize="@dimen/text_small"
                    android:background="@drawable/background_bottom_line_gray_light"/>

                <!-- Help center -->
                <TextView
                    android:id="@+id/setting_activity_help_center_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/setting_activity_weekly_send_feedback_text_view_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/help_center"
                    android:textSize="@dimen/text_small"
                    android:background="@drawable/background_bottom_line_gray_light"/>

                <!-- Privacy & licenses -->
                <TextView
                    android:id="@+id/setting_activity_privacy_and_licenses_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/setting_activity_help_center_text_view_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/privacy_and_licenses"
                    android:textSize="@dimen/text_small"
                    android:background="@drawable/background_bottom_line_gray_light"/>

                <!-- Sign Out -->
                <TextView
                    android:id="@+id/setting_activity_signout_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/setting_activity_privacy_and_licenses_text_view_id"

                    android:paddingStart="@dimen/space_medium_large"
                    android:paddingEnd="@dimen/space_medium_large"
                    android:gravity="center_vertical"
                    android:textColor="@color/soft_red"
                    android:text="@string/sign_out_string"
                    android:textSize="@dimen/text_small"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/setting_activity_version_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_activity_general_card_view_id"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/space_medium_large"

            android:text="@string/version_hint"
            android:textSize="@dimen/text_really_small"/>
    </RelativeLayout>
</ScrollView>